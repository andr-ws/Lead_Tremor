d_dir=~/Desktop/Tremor/data/derivatives
FSLdir=$d_dir/FSL
bedpostX=$d_dir/bedpostX
mkdir $d_dir/Lead_dwi
Lead_dir=$d_dir/Lead_dwi
synthsr_dir=$d_dir/SynthSR

# Populate diffusion, T1w MRI and CT into the directory (as per Lead naming convention)

for dir in $FSLdir/s*; do
    SUB=${dir: -6}
    echo $SUB
    mkdir $Lead_dir/${SUB}
    cp $FSLdir/${SUB}/eddy_corrected_data.nii.gz $Lead_dir/${SUB}/dti.nii.gz
    gunzip $Lead_dir/${SUB}/dti.nii.gz
    cp $bedpostX/${SUB}/bvals $Lead_dir/${SUB}/dti.bval
    cp $FSLdir/${SUB}/eddy_corrected_data.eddy_rotated_bvecs $Lead_dir/${SUB}/dti.bvec
    cp $synthsr_dir/${SUB}/${SUB}_T1w_s.nii.gz $Lead_dir/${SUB}/anat_t1.nii.gz
    gunzip $Lead_dir/${SUB}/anat_t1.nii.gz
    cp ~/Desktop/Tremor/data/${SUB}/anat/${SUB}_CT.nii.gz $Lead_dir/${SUB}/postop_ct.nii.gz
    gunzip $Lead_dir/${SUB}/postop_ct.nii.gz
done

# deleted subject 30. No CT available.
